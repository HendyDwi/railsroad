<h2>Hello RailsRoad Blog</h2>
<br>
<br>

<% @posts.each do |p|%>
<h5><%=p.title%></h5>
<p><%=p.body%></p>
<br>


<h2>Komentar</h2>
<% p.komens.each do |c| %>
<h3><%= c.email %></h3>
 <p><%= c.isi %></p>
<% end %>

<form action="<%= komen_path(p.id) %>" method="POST">
<br>
<input type="text" name="email_komen">
<br>
<textarea name="isi_komen" id="" cols="30" rows="10"></textarea><br>
<input type="submit" value="submit">
</form>
<br>
<% end %>